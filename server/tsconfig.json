{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "lib": [
            "es2016",
            "esnext.asynciterable",
            "dom"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}